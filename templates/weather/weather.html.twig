{% extends 'base.html.twig' %}

{% block title %}Hello Weather !{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/weather-icons-wind.css') }}" rel="stylesheet" crossorigin="anonymous">
    <link href="{{ asset('css/weather-icons-wind.min.css') }}" rel="stylesheet" crossorigin="anonymous">
    <link href="{{ asset('css/weather-icons.css') }}" rel="stylesheet" crossorigin="anonymous">
    <link href="{{ asset('css/weather-icons.min.css') }}" rel="stylesheet" crossorigin="anonymous">
    <link href="{{ asset('css/weather.css') }}" rel="stylesheet" crossorigin="anonymous">
{% endblock stylesheets %}

{% block body %}
    <div class="main">
        <h1 class="display-4">Bienvenue sur la page Météo</h1>

        <div class="row">
            <div class="container">
                <div class="card-block p-25">
                    <h3>
                        <span class="font-size-30">{{ tab[0] }}</span>
                    </h3>
                    <p class="weather-day-date mb-30">
                        <span class="mr-5">{{ tab[1] }}</span>{{ tab[2] }}
                    </p>
                    <div class="mb-30">
                        <span id="icon">
                            {{ tab[3]|raw }}
                        </span>

                        <div class="inline-block">
                            <span class="font-size-50">{{ tab[4] }}°
                                <span class="font-size-40">C</span>
                            </span>
                            <p class="text-center">{{ tab[5] }}</p>
                            <i class="wi wi-humidity"></i> <span>{{ tab[6] }}</span>%
                            <i class="wi wi-sandstorm"></i> <span>{{ tab[7] }}</span>km/h
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="accueil">
            <a href="{{path('weather')}}">Retour</a>
        </div>
    </div>
{% endblock %}
